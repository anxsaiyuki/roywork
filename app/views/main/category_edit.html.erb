<script>
$(document).ready(
    function()
    {
        $('#redactor').redactor();
    }
);
</script>
<style>
.redactor_box {
    width: 106%;
    height: 100%;
}
</style>
<div id="main">

        <%= render partial: "module/header" %>
        
        <div class="col-md-12 col-xs-12 content">
            
            <%= render partial: "module/sideMenu" %>

            <div class="col-md-9 col-xs-9 info">
                
                <div class="info_top"> </div>

                    <div class="info_mid" style="height:initial;">  
                    <%= form_tag category_update_path, remote: true do %>
                    <textarea id="redactor" name="content">
                        
                        <%=raw @category.content %>
                        
					</textarea>
                        <%= submit_tag "Update Quantity" %>
                    <% end %>
                    </div>
               
                
                </div>
             <div class="col-md-12 col-xs-12 info_bottom"></div>
        </div>
    </div>
    <div class="update_alert" style="color:red;"></div>
</div>
            
    <%= render partial: "module/footer" %>